@inherits System.Web.Mvc.WebViewPage
@{
    Layout = "_Layout.cshtml";
}



<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Owner Panel Edit<br>
        <small>Optional description</small>
    </h1>

</section>

<!-- Main content -->
<section class="content container-fluid">

    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Change Information</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal">
            <div class="box-body">
                <div class="form-group">
                    <label class="col-sm-2 control-label">Name</label>

                    <div class="col-sm-10">
                        <input type="email" class="form-control" placeholder="Name" value="Jonathan Burke" required="">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Email</label>

                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="Email" value="john@gmail.com" required="">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Phone Number</label>

                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="Phone Number" value="0182312312" required="">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Address</label>

                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="Address" value="28 Banani, Dhaka 1208" required="">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Date of Birth</label>

                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="Phone Number" value="02/04/1990" required="">
                    </div>
                </div>

                <!-- /.box-body -->
                <div class="box-footer">
                    <a href="/Owner/_profile" class="btn btn-default">Cancel</a>
                    <button type="submit" onclick="alert('Information Updated Successfully')" class="btn btn-info pull-right">Update</button>
                </div>
                <!-- /.box-footer -->
        </form>
    </div>

</section>
