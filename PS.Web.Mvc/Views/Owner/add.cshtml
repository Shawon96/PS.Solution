    <style>

        #map {
            background: red;
            height: 550px;
            width: 950px;
        }
    </style>
    <!------ Include the above in your HEAD tag ---------->

    <div id="prof" style="display: none">
        <div class="col-md-12">
            <!-- Widget: user widget style 1 -->
            <div class="box box-widget widget-user">
                <!-- Add the bg color to the header using any of the bg-* classes -->
                <div class="widget-user-header bg-aqua-active">
                    <h3 class="widget-user-username">Alexander Parking</h3>
                    <h5 class="widget-user-desc">Kuril, Dhaka</h5>
                </div>
                <div class="widget-user-image">
                    <img class="img-circle" src="~/Assets/dist/img/user1-128x128.jpg" alt="User Avatar">
                </div>
                <div class="box-footer" style="color:black">
                    <div class="row">
                        <div class="col-sm-4 border-right">
                            <div class="description-block">
                                <h5 class="description-header">$1.3 /hr</h5>
                                <span class="description-text">RATE</span>
                            </div>
                            <!-- /.description-block -->
                        </div>
                        <!-- /.col -->
                        <div class="col-sm-4 border-right">
                            <div class="description-block">
                                <!-- <h5 class="description-header">☆☆☆☆☆</h5> -->
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star"></span>
                                <span class="fa fa-star"></span>
                                <span class="description-text">RATINGS</span>
                            </div>
                            <!-- /.description-block -->
                        </div>
                        <!-- /.col -->
                        <div class="col-sm-4">
                            <div class="description-block">
                                <h5 class="description-header">3/5</h5>
                                <span class="description-text">CAPACITY</span>
                            </div>
                            <!-- /.description-block -->
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
                <div class="col-sm-6 col-sm-offset-3">
                    <button type="button" class="form-control btn btn-success" tabindex="4" data-toggle="modal" data-target="#myModal">BOOK NOW</button>
                </div>
            </div>
            <!-- /.widget-user -->
        </div>
    </div>
    <!-- EEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEE -->
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Place informations</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form role="form" method="post" action="/Owner/add">
            <div class="box-body">
                <div class="form-group">
                    <label for="spotName">Spot Name</label>
                    <input type="text" class="form-control" id="spotName" name="SpotName" placeholder="Enter a name.." required>
                </div>
                <div class="form-group">
                    <label for="spotAddr">Spot Location</label>
                    <input type="text" class="form-control" id="spotAddr" name="SpotLocation" placeholder="Enter address.." required>
                </div>
                <hr />
                <!-- <div class="form-group">
                  <label for="spotPrice">Price/hr</label>
                  <input type="text" class="form-control" id="spotPrice" placeholder="$3.2">
                </div>
                <div class="form-group">
                  <label for="spotCap">Total Capacity</label>
                  <input type="text" class="form-control" id="spotCap" placeholder="7">
                </div> -->

                <div class="row">
                    <div class="col-lg-6 col-sm-6">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <label for="spotPrice">PRICE/hr</label>
                            </span>
                            <input id="spotPrice" type="number" step="0.01" name="PricePerHour" class="form-control" placeholder="3.27" required>
                        </div>
                        <!-- /input-group -->
                    </div>
                    <!-- /.col-lg-6 -->
                    <div class="col-lg-6 col-sm-6">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <label for="spotCap">CAPACITY</label>
                            </span>
                            <input id="spotCap" type="number" class="form-control" name="Capacity" placeholder="7/8.." required>
                        </div>
                        <!-- /input-group -->
                    </div>
                    <!-- /.col-lg-6 -->
                </div>
                <hr />

                <div class="form-group">
                    <label>Facilities:</label>
                    <input type="checkbox" name="Option1" value="OK"><span style="font-size:18px; color:green;padding-left:5px;">Car Washing </span>
                    <input type="checkbox" name="Option2" value="OK"><span style="font-size:18px; color:green;padding-left:5px;">Car Servicing </span>
                    <input type="checkbox" name="Option3" value="OK"><span style="font-size:18px; color:green;padding-left:5px;">Car accessories </span>
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title" style="font-size:12px">ADD More</h3>
                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </div>
                            <!-- /.box-tools -->
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body" style="display: none">
                            <textarea class="form-control" rows="3" placeholder="Add other.." name="NewFacility"></textarea>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->


                </div>
                <hr />
                <div class="row">
                    <div class="col-lg-5 col-sm-5">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <label for="exampleInputEmail1">LAT</label>
                            </span>
                            <input id="lt" type="text" name="Lat" class="form-control" placeholder="lat.." required>
                        </div>
                        <!-- /input-group -->
                    </div>
                    <!-- /.col-lg-6 -->
                    <div class="col-lg-5 col-sm-5">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <label for="exampleInputEmail1">LNG</label>
                            </span>
                            <input id="ln" type="text" name="Lon" class="form-control" placeholder="lng.." required>
                        </div>
                        <!-- /input-group -->
                    </div>
                    <!-- /.col-lg-6 -->
                    <div class="col-sm-2 col-lg-2">
                        <button type="button" class="form-control btn btn-success" data-toggle="modal" data-target="#myModal">FIND IN MAP</button>
                    </div>
                </div>

            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>

        </form>
    </div>

    <!-- <h2>Modal Example</h2> -->
    <!-- Trigger the modal with a button -->
    <!-- <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Open Modal</button> -->
    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-lg-12">
                    <div id=map class="large-box bg-aqua" style="width:100%;"></div>
                </div>
            </div>

        </div>
    </div>
</section>
